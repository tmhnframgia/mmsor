<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Congratulations ! You just have to fix only <%= pluralize(object.errors.count, "error") %> in your form below.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>