<% provide(:title, 'All users') %>
<h1>All accidentally registered Users</h1>

<%= will_paginate %>
<ul class="list-wrap">
  <% @users.each do |user| %>
    <li>
      <%= image_tag(user.get_avatar, alt: user.fullname, class: 'list-item-avatar') %>
      <div class="list-item-info"><%= link_to user.fullname, user %> (<%= link_to user.username, user %>)
      <br/><i>age <%= user.age %></i></div>
    </li>
  <% end %>
</ul>
<%= will_paginate %>